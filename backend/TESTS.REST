Authorization: Bearer {{jwt_token}}


#//////////////////////////////
# USER ROUTES (Admin only)
#//////////////////////////////

### Obtener todos los usuarios
GET {{api_url}}/users
Authorization: Bearer {{jwt_token}}

### Obtener un usuario por ID
GET {{api_url}}/users/{{user_id}}
Authorization: Bearer {{jwt_token}}

### Actualizar un usuario (Admin o el propio usuario)
PUT {{api_url}}/users/{{user_id}}
Authorization: Bearer {{jwt_token}}
Content-Type: application/json

{
    "username": "updatedusername",
    "email": "updated@example.com",
    "password": "newpassword123"
}

### Eliminar un usuario
DELETE {{api_url}}/users/{{user_id}}
Authorization: Bearer {{jwt_token}}


#//////////////////////////////
# PRODUCT ROUTES
#//////////////////////////////

### Obtener todos los productos
GET {{api_url}}/products

### Obtener productos de la categoría "Murals"
GET {{api_url}}/products?category=Murals

### Obtener un producto por ID
GET {{api_url}}/products/{{product_id}}

### Crear un nuevo producto (Solo Admin)
POST {{api_url}}/products
Authorization: Bearer {{jwt_token}}
Content-Type: application/json

{
    "name": "Nuevo Producto",
    "category": "GraphicDesign",
    "price": 99.99,
    "imageUrl": "https://example.com/image.jpg",
    "description": "Descripción del producto",
    "details": ["Detalle 1", "Detalle 2"]
}

### Actualizar un producto (Solo Admin)
PUT {{api_url}}/products/{{product_id}}
Authorization: Bearer {{jwt_token}}
Content-Type: application/json

{
    "name": "Producto Actualizado",
    "price": 149.99,
    "description": "Nueva descripción"
}

### Eliminar un producto (Solo Admin)
DELETE {{api_url}}/products/{{product_id}}
Authorization: Bearer {{jwt_token}}


#//////////////////////////////
# ORDER ROUTES
#//////////////////////////////

### Obtener todas las órdenes (Solo Admin)
GET {{api_url}}/orders
Authorization: Bearer {{jwt_token}}

### Obtener las órdenes del usuario autenticado
GET {{api_url}}/orders/myorders
Authorization: Bearer {{jwt_token}}

### Obtener una orden por ID
GET {{api_url}}/orders/{{order_id}}
Authorization: Bearer {{jwt_token}}

### Crear una nueva orden
POST {{api_url}}/orders
Authorization: Bearer {{jwt_token}}
Content-Type: application/json

{
    "orderItems": [
        {
            "product": "{{product_id}}",
            "quantity": 2
        }
    ]
}

### Actualizar el estado de una orden (Solo Admin)
PUT {{api_url}}/orders/{{order_id}}
Authorization: Bearer {{jwt_token}}
Content-Type: application/json

{
    "status": "completed"
}

### Eliminar una orden (Solo Admin)
DELETE {{api_url}}/orders/{{order_id}}
Authorization: Bearer {{jwt_token}}


